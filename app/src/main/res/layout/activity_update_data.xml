<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient_drawable"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".UpdateDataActivity">

    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UPDATE DATA: FIREBASE"
        android:gravity="center"
        android:letterSpacing=".02"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#32527B"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        />
    <EditText
        android:id="@+id/editUpdateUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter User Name"
        android:textSize="25sp"
        android:textColorHint="#32527B"
        android:textColor="#32527B"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/textview"
        />
    <EditText
        android:id="@+id/editUpdateFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Full Name"
        android:textColorHint="#32527B"
        android:textColor="#32527B"
        android:textSize="25sp"
        android:layout_margin="20dp"
        android:layout_below="@id/editUpdateUserName"
        />
    <EditText
        android:id="@+id/editUpdateDesignation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Designation"
        android:textSize="25sp"
        android:textColorHint="#32527B"
        android:textColor="#32527B"
        android:layout_margin="20dp"
        android:layout_below="@id/editUpdateFullName"
        />
    <Button
        android:id="@+id/updateDataButton"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Update data"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/rounded_corner"
        android:layout_margin="20dp"
        android:layout_below="@id/editUpdateDesignation"
        />
</RelativeLayout>